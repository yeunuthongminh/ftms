<% if @trainee_type.errors.any? %>
  $(".errors").html("<%= j render "shared/error_messages", object: @trainee_type %>");
<% else %>
  $("#user_profile_attributes_trainee_type_id").append($("<option></option>")
    .attr("value", <%= @trainee_type.id %>)
    .text("<%= @trainee_type.name %>")
    .prop("selected", true));
  $("#usertype-modal").modal("hide");
  $(".flash").html("<%= j render "layouts/flash" %>");
<% end %>
