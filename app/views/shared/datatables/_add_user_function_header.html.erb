<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell namespace">
        <%= t "roles.namespace" %>
        <%= link_to filter_datas_path(type: :namespace,
          filter_type: :routes), remote: true, class: "open-select",
          data: {name: "f-namespace"} do %>
          <i class="fa ic ic-filter namespace"></i>
        <% end %>
      </div>

      <div class="tcell routes title">
        <%= t "routes" %>
        <%= link_to filter_datas_path(type: :controller_name,
          filter_type: :routes), remote: true, class: "open-select",
          data: {name: "f-controller_name"} do %>
          <i class="fa ic ic-filter controller_name"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

<header class="fixedTable-header">
  <div id="table-header" class="scroll-table">
    <div class="tbody">
      <div class="trow header">
        <% Settings.user_functions.each_with_index do |user_function, index| %>
          <div class="tcell <%= user_function %>-user_function
            title checked-function title">
            <%= user_function %>
            <input type="checkbox" class="check_functions" data-index="<%= index %>">
          </div>
        <% end %>
        <div class="tcell title blank"></div>
      </div>
    </div>
  </div>
</header>
