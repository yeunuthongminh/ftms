<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>

      <div class="tcell controller_name title">
        <%= t "roles.controller_name" %>
        <%= link_to filter_datas_path(type: :controller_name,
          filter_type: :courses), remote: true, class: "open-select",
          data: {name: "f-controller_name"} do %>
          <i class="fa ic ic-filter controller_name"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

<header class="fixedTable-header">
  <div id="table-header" class="scroll-table">
    <div class="tbody">
      <div class="trow header">
        <% Settings.functions.each do |function| %>
          <div class="tcell <%= function %>-function title">
            <%= function.capitalize %>
          </div>
        <% end %>
        <div class="tcell checked-function title">
          <input type="checkbox" id="checked_all">
        </div>
      </div>
    </div>
  </div>
</header>
