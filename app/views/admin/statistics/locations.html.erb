<div id="statistics">
  <div class="<%= params[:type] %> box box-success">
    <div class="box-header with-border">
      <h3 class="box-title">
        <%= t "statistics.locations.title" %>
      </h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse">
          <i class="fa fa-minus"></i>
        </button>
        <button type="button" class="btn btn-box-tool" data-widget="remove">
          <i class="fa fa-times"></i>
        </button>
      </div>
      <div class="div-space"></div>
      <% @statistics.trainee_by_locations.keys.each_with_index do |location, index| %>
        <div class="checkbox-location">
        <div id="location-select-<%= index %>">
          <input type="checkbox" checked="true">
        </div>
        <strong>
          <span class="location-name"><%= location %></span>
        </strong>
        </div>
      <% end %>
    </div>

    <div class="box-body">
      <div id="locations-statistic"
        data-locations="<%= @statistics.trainee_by_locations.keys %>"
        data-trainees="<%= @statistics.trainee_by_locations.values %>"
        data-charts="<%= @statistics.trainee_by_locations.values.collect.with_index{|value, index| Hash["x", index, "y", value]} %>">
      </div>
    </div>

    <%= render "table_statistic_below_chart", type: "location" %>
  </div>
</div>
