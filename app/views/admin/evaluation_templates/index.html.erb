<div id="main" class="clearfix">
  <h1 class="text-center"><%= t "evaluation_templates.all" %></h1>
  <div id="content">
    <div id="<%= controller_name %>">
      <%= image_tag "loading.gif", id: "loading" %>
      <h3 class="title">
        <button id="btn-filter-on-off" title="<%= filter_title %>"
          class="btn-filter-onoff-project btn btn-default">
          &nbsp;
        </button>
        <span id="filter-loading" class="filter-loading-offset-top"></span>
      </h3>

      <div class="table">
        <%= render "shared/datatables/evaluation_template_header" %>
        <%= @evaluation_templates_presenter.html_safe %>
      </div>

      <div class="pull-right" id="number-records">
        <%= i18n_pluralize @evaluation_templates.size, Settings.record %>
      </div>

      <div id="filter" data-filter-data="<%= @filter_data_user %>"
        data-type="<%= :evaluation_templates %>" data-id="<%= current_user.id %>"
        data-is-turn-on="<%= @filter_service.is_on? %>">
      </div>

      <div class="list-filters">
        <div class="filter-form">
        </div>
      </div>
    </div>
  </div>
</div>
